<h1>Configure your cookie</h1>

<h2>Select cookie base</h2>

{{> base-selector}}

<h2>Select cookie addons</h2>

{{#each allAddons}}
    <a href="/configurator/add-addon/{{this.[0]}}" class="btn {{#if (isInArray @root.cookie.addons this.[0])}}btn-disabled{{/if}}">Add {{this.[0]}} for {{this.[1]}} PLN</a>
{{/each}}

{{#if cookie.base}}
    {{> cookie-preview}}
    {{> addons}}
    <a href="/order/summary" class="btn btn-big"><img src="/assets/images/basket.svg" alt="basket"> Order Now!</a>
{{else}}
    <p>Please select base of your cookie to se it's preview and price summary.</p>
    <p>
        {{> base-selector}}
    </p>
{{/if}}
